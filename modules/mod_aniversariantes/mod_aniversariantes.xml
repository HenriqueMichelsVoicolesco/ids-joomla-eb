<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" client="site" method="install">
	<name>Aniversariantes do Mês</name>
	<author>3º Sgt Souza Lima</author>
	<creationDate>08/02/2024</creationDate>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>lucas.lima.rk@gmail.com</authorEmail>
	<version>1.0.0</version>
	<description>Módulo de aniversariantes do mês</description>
	<namespace path="modules/mod_aniversariantes">Joomla\Module\Aniversariantes</namespace>
	<files>
		<filename module="mod_aniversariantes">mod_aniversariantes.php</filename>
		<folder>tmpl</folder>
		<service provider="Astatonn\Component\Aniversariantes\Site\Helper\AniversariantesHelper" scope="prototype" />
	</files>


	<help key="Site_Modules:_Aniversariantes" />
	<config>
		<fields name="params">
			<fieldset name="basic-config" label='Configuração de Exibição'>
                <field name="birthday-before" type="list" label="Aniversários anteriores" description="Defina se seão expostos aniversariantes de dias anteriores a data atual">
                    <option value="yes">Sim</option>
                    <option value="no">Não</option>
                </field>
                <field name="amount-back" type="number" label="Dias antes" description='Defina quantos dias' showon="birthday-before:yes"/>
                
                <field name="days-beyond" type="number" label="Dias a serem expostos" description="Defina quantos dias após a data de referências serão exibidos" default="15" /> 

            </fieldset>
		</fields>
	</config>
</extension>
